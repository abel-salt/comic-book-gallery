@model ComicBookGallery.Models.ComicBook[]

@{
    ViewBag.Title = "Comic Books";
}


<h2>@ViewBag.Title</h2>
<div class="row">
    @foreach( var book in Model) 
    {
        <div class="col-md-3">
            <h4>@Html.ActionLink($"{book.Title} {book.IssueNumber}","Details", new{ id = book.Id})</h4>
            <a href="@Url.Action("Details", new{ id = book.Id})">

                <img src="/Images/@(book.DisplayName).jpg"
                     alt="@book.Title #@book.IssueNumber"
                     class="img-responsive" />
            </a>
        </div>
    
    }
</div>