@model ComicBookGallery.Models.ComicBook

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.GetDisplayName;

}


<h1>@Model.Title</h1>
<h2>Item @Model.IssueNumber</h2>
<h3>Description</h3>
<div> @Html.Raw(Model.DescriptionHtml)</div>
<h3>Artists: </h3>
@if (Model.Artists.Length > 0)
{

    <ul>
        @foreach (var artist in Model.Artists)
        {
            <li> <pre> @artist.Role : @artist.Name </pre> </li>
        }
    </ul>
}
else
{
    <pre> Unknown </pre>
}