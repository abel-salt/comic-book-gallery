@model ComicBookGallery.Models.ComicBook

@{
   
    ViewBag.Title = Model.DisplayName;

}


<h2>@Model.DisplayName</h2>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            <h5><label>Series Title:</label> @Model.Title</h5>
            <h5><label>Issue #:</label> @Model.IssueNumber</h5>
            <h5><label>Favorite:</label> @(Model.Favorite ? "yes" : "no") </h5>
            <h5>Artists:</h5>
            <div>
                @if (Model.Artists.Length > 0)
            {
                <ul>
                    @foreach (var artist in Model.Artists)
                    {
                        <li>@artist.Role : @artist.Name</li>
                        
                    }
                </ul>
            } 
            </div>
        </div>
        <h5>Description</h5>
        @Html.Raw(Model.DescriptionHtml)
    </div>
    <div class="col-md-6">
        <img src="/Images/@(Model.DisplayName).jpg"
             alt="The Amazing Spider-Man #700" class="img-responsive" />
    </div>
</div>